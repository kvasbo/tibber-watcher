{
    "name": "tibber-watcher",
    "version": "1.0.0",
    "main": "dist/watcher.js",
    "repository": "https://github.com/kvasbo/tibber-watcher.git",
    "author": "Audun Kvasb√∏ <audun@kvasbo.no>",
    "license": "MIT",
    "scripts": {
        "build": "tsc",
        "start": "node dist/watcher.js",
        "watch": "tsc --watch",
        "dev": "node --watch dist/watcher.js",
        "lint": "eslint ./src --ext .ts --fix",
        "smoke": "node dist/test.js --smoke"
    },
    "dependencies": {
        "dotenv": "^16",
        "express": "^4.18.2",
        "luxon": "^3.4.2",
        "mqtt": "^5",
        "tibber-api": "^5",
        "zod": "^3"
    },
    "devDependencies": {
        "@types/express": "^4.17.17",
        "@types/luxon": "*",
        "@types/node": "^20",
        "@typescript-eslint/eslint-plugin": "^7",
        "@typescript-eslint/parser": "^7",
        "eslint": "^9",
        "eslint-config-prettier": "^9",
        "eslint-plugin-prettier": "^5",
        "prettier": "^3",
        "typescript": "^5"
    },
    "prettier": {
        "trailingComma": "es5",
        "tabWidth": 4,
        "semi": true,
        "singleQuote": true
    },
    "eslintConfig": {
        "plugins": [
            "@typescript-eslint",
            "prettier"
        ],
        "ignorePatterns": [
            "ts/client/*.ts"
        ],
        "extends": [
            "eslint:recommended",
            "plugin:@typescript-eslint/eslint-recommended",
            "plugin:@typescript-eslint/recommended",
            "prettier"
        ],
        "parserOptions": {
            "ecmaVersion": 2022,
            "sourceType": "module"
        },
        "env": {
            "node": true,
            "es6": true,
            "es2022": true
        },
        "rules": {
            "no-console": 0,
            "no-unused-vars": 1,
            "no-undef": 1,
            "prettier/prettier": 2
        }
    }
}
