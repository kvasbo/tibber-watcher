{
    "name": "tibber-watcher",
    "version": "1.0.0",
    "main": "dist/watcher.js",
    "repository": "https://github.com/kvasbo/tibber-watcher.git",
    "author": "Audun Kvasb√∏ <audun@kvasbo.no>",
    "license": "MIT",
    "scripts": {
        "start": "node src/Watcher.mjs",
        "dev": "node --watch src/Watcher.mjs",
        "lint": "ESLINT_USE_FLAT_CONFIG=false eslint ./src --fix"
    },
    "dependencies": {
        "dotenv": "^16",
        "luxon": "^3.4.2",
        "mqtt": "^5",
        "tibber-api": "^5",
        "zod": "^3"
    },
    "devDependencies": {
        "@types/luxon": "*",
        "@types/node": "^20",
        "eslint": "^9",
        "eslint-config-prettier": "^9",
        "eslint-plugin-prettier": "^5",
        "prettier": "^3"
    },
    "prettier": {
    },
    "eslintConfig": {
        "plugins": [
            "prettier"
        ],
        "extends": [
            "eslint:recommended",
            "prettier"
        ],
        "parserOptions": {
            "ecmaVersion": 2022,
            "sourceType": "module"
        },
        "env": {
            "node": true,
            "es6": true,
            "es2022": true
        },
        "rules": {
            "no-console": 0,
            "no-unused-vars": 1,
            "no-undef": 1,
            "prettier/prettier": 2
        }
    }
}
