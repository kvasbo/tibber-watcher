{
    "compilerOptions": {
        "outDir": "./dist",
        "lib": ["es2020", "DOM"],
        "module": "CommonJS",
        "target": "es2020",
        "allowJs": false,
        "moduleResolution": "node",
        "removeComments": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "noImplicitAny": true,
        "sourceMap": true,
        "sourceRoot": "./src"
    },
    "include": ["src/*"]
}
